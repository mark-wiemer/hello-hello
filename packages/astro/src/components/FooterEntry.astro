---
interface Props {
  href: string;
  text: string;
  external?: boolean;
}
const { href, text, external } = Astro.props;
const currentPath = Astro.url.pathname;
---

{/* Wrap `a` with `span` to prevent the outline box from getting too big */}
{
  currentPath === href ? (
    text
  ) : (
    <span>
      <a
        href={href}
        target={external ? "_blank" : "_self"}
        rel={external ? "noreferrer" : undefined}
      >
        {text}
      </a>
    </span>
  )
}
