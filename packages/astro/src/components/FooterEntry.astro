---
interface Props {
  href: string;
  text: string;
}
const { href, text } = Astro.props;
const currentPath = Astro.url.pathname;
---

{/* Wrap `a` with `span` to prevent the outline box from getting too big */}
{
  currentPath === href ? (
    text
  ) : (
    <span>
      <a href={href}>{text}</a>
    </span>
  )
}
