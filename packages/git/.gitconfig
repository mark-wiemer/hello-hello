# open this file with `git edit`, `notepad ~/.gitconfig`, or `git config --global --edit`
[alias]
    amano = commit --amend -a --no-edit # AMend All NO edit
    bme = branch -l '[a-zA-Z0-9]*' # Branches by ME
    co = checkout
    come = "!sh -c \"git checkout $1\" -" # CheckOut a branch by ME
    cam = commit -a --amend # Commit All via aMend
    deletemerged = "!sh -c \"git branch --merged origin/main | grep -v main | xargs git branch -d\""
    edit = config --global --edit
    logm = log main.. # LOG changes since Main
    new = "!sh -c \"git checkout -b $1\" -" # NEW branch for me
[core]
    editor = code --wait
[format]
    # pretty = format:%C(green)%h%C(blue) %an%C(yellow) %s%C(magenta)%d%C(white)%+b # all details
    pretty = format:%C(green)%h %C(magenta)%as %C(blue)%an %C(yellow)%s %C(magenta)%d # oneline
[user]
    name = Mark Wiemer
    # email is set in ~/.gitconfig.local (not tracked in git)
[include]
    path = ~/.gitconfig.local
[fetch]
    prune = true
[pull]
    prune = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
[credential "https://github.com"]
	helper = # intentionally blank, clear existing helpers
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = # intentionally blank, clear existing helpers
	helper = !/usr/bin/gh auth git-credential
